---
export interface Props {
  title: string;
  paragraph: string;
}

const { title, paragraph } = Astro.props as Props;
---

<section class="bg-test">
  <div class="2xl:py-3 py-0 flex justify-center bg-">
    <h2 class="lg:text-5xl md:text-4xl text-3xl px-5 py-2 font-bold underline">
      {title}
    </h2>
  </div>

  <div id="ABOUT" class="flex justify-center">
    <div class="2xl:max-w-[1160px] pt-1 px-[30px]">
      <p class="md:text-xl text-lg">{paragraph}</p>
    </div>
  </div>
</section>
