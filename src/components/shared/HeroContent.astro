---
import ButtonProps from "./ButtonProps.astro";

export interface Props {
  title: string;
  listitem1: string;
  listitem2: string;
  listitem3: string;
  listitem4: string;
}

const { title, listitem1, listitem2, listitem3, listitem4 } =
  Astro.props as Props;
---

<div id="hero-wrapper" class="flex justify-center pt-1 2xl:h-screen h-[100%]">
  <div id="grid" class="grid lg:grid-cols-2 grid-cols-1">
    <div id="sq1" class="bg- p-5 px-5 py-3 mb-5 2xl:mt-[250px] mt-1">
      <div id="padding" class="lg:p-5 p-1 bg-">
        <div class="">
          <h1 class="text-test lg:text-4xl text-3xl font-extrabold pb-2">
            {title}
          </h1>
          <div>
            <h2 class="font-bold lowercase md:text-xl text-md">
              - {listitem1}
            </h2>
            <p class="mt-1 lowercase md:text-xl text-md">- {listitem2}</p>
            <p class="lowercase md:text-xl text- my-1">- {listitem3}</p>
            <p class="lowercase md:text-xl text-md">- {listitem4}</p>
          </div>
          <!-- * BTN WRAPPER   v-->
          <ButtonProps
            btn1="see how we can reach your online goals!"
            btn2="contact"
            btn1Link="/#services"
            btn2Link="/#contact"
          />
          <!-- * BTN WRAPPER   ^-->
        </div>
      </div>
    </div>
    <!-- /////////////////////////////////// -->
    <div id="sq2" class="bg- flex justify-center items-center lg:p-0 p-5">
      <img
        src="https://images.pexels.com/photos/39284/macbook-apple-imac-computer-39284.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
        class="border border-black"
      />
    </div>
  </div>
</div>
