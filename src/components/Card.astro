---
import { Image } from "astro:assets";
import Github from "../../public/images/icons/github.png";
import OpenFile from "../../public/images/icons/openFile.png";

const { title, image, url, paragraph } = Astro.props as Props;
---

<div id="card-wrapper" class="bg- rounded-lg border-2 border-black">
  <div id="card-container">
    <h3 class="text-4xl font-bold py-2 px-3 text-test2 bg-teal">{title}</h3>
    <div
      id="img-wrapper"
      class="opacity-80 hover:opacity-100 border-black border-t border-b"
    >
      <div class="p-" id="img-container">
        <img src={image} alt="" />
      </div>
    </div>

    <div id="p-wrapper" class="p-1">
      <div id="p-grid" class="p-2 grid grid-cols-6">
        <p class="col-span-5 bg-test p-1 text-onyx pl-3 pb-1">
          {paragraph}
        </p>

        <div
          id="btn-container-padding"
          class="flex justify-center pl-4 space-x-2"
        >
          <button
            class="opacity-80 hover:opacity-100 border border-black w-1/2 h-1/2 col-span-1 rounded mt-2 px-3 py-1 bg-teal text-md flex justify-center"
          >
            <Image src={OpenFile} alt="" />
          </button>

          <button
            class="opacity-80 hover:opacity-100 border border-black w-1/2 h-1/2 col-span-1 rounded mt-2 px-3 py-1 bg-teal text-md flex justify-center"
          >
            <Image src={Github} alt="" />
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
