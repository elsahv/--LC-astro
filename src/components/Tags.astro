---
import { capitialize } from '../utils'

const { tags} = Astro.props

interface Props {
    tags: string[];
}
---


<div class="flex flex-wrap gap-2 mt-5">
    {tags.map((tag: string, index: number) => (
      <span
        class={index % 2 === 0 ? "px-2 py-1 bg-green-500 text-white text-xs hover:opacity-90" : "px-2 py-1 bg-indigo-500 text-white text-xs hover:opacity-90"}
        ><a href={'/articles/tag/' + tag}>#{capitialize(tag)}</a></span>
    ))}
    
    </div>