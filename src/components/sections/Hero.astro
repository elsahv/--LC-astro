---
import TestCard from "../TestCard.astro";
import TestCta from "../TestCta.astro";
import ButtonProps from "../shared/ButtonProps.astro";
import SubSectionBanner from "../shared/SubSection_Banner.astro";
const allServices = await Astro.glob("../../pages/services/*.md");
---

<TestCard
  title=" A subscription website service for busy small-businesses owners."
  listitem1="What do you need for a website?"
  listitem3="The Growing Pup? A template for small businesses just starting out,  increased potential customers, easier to find on Google."
  listitem2="Or Rising Carnivore? You need a website not just to promote your business, but have the the ablity to tell your story and brand"
  listitem4="A custom website that fits your business, personality, goals... and you alone."
/>
<div
  id="gallery-container"
  class="mt-5 p-5 bg-teal border border-t-black text-parchment"
>
  <TestCta />

  <div class="md:ml-5 ml-0 md:pl-5 pl-0 mt-5 py-5">
    <SubSectionBanner title="Reasons you need LC" />
  </div>
  <!-- !similar to PHOTOGALLERY COMP  v-->
  <div
    id="grid"
    class="mt-[35px] mb-5 2xl:px-[205px] md:px-[65px] px-5 grid 2xl:grid-cols-4 md:grid-cols-2 grid-cols-1 gap-3 pt-2"
  >
    {
      allServices.map((service) => (
        <div id="sq" class="hover:opacity-70">
          {/* <a href={service.url} class=""> */}
          <h2 class="absolute p-2 text-test1  bg-teal border border-black lowercase dropshadow-2xl text-2xl">
            {service.frontmatter.title}
          </h2>
          <img
            src={service.frontmatter.image.url}
            alt=""
            class="border border-black w-[650px] h-[350px]"
          />
          {/* </a> */}
        </div>
      ))
    }
  </div>
</div>
<!-- !similar to PHOTOGALLERY COMP  ^-->
