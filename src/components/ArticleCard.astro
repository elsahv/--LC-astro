---
import { formatDate} from '../utils'
import type {CollectionEntry} from 'astro:content'
import Tags from './Tags.astro'

const { article } = Astro.props


interface Props {
    article: CollectionEntry<'blog'>
}
---

<div class="max-w-md mx-auto mt-10 border border-black">
    <div class="bg-teal rounded-lg overflow-hidden shadow-lg">
      <a href={'/articles/' + article.slug}>
        <img
          src={'/images/' + article.data.image }
          alt="Article Image"
          class="p-5 w-full object-cover hover:opacity-75 transition duration-300 ease-in-out"
        />
      </a>
      <div class="p-6">
        <h2 class="text-lavender text-2xl font-semibold mb-2">
          <a href={'/articles/' + article.slug}>{article.data.title}</a>
        </h2>
        <!-- <p class="text-gray-600 text-sm mb-4">{formatDate(article.data.pubDate)}</p> -->
        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatum omnis commodi nobis accusantium voluptas? Unde quos adipisci sint! Ipsum totam, illo voluptatum dignissimos ex reprehenderit adipisci fuga cumque natus quas.  </p>
        
        <Tags tags={article.data.tags} />
        
      </div>
    </div>
  </div>