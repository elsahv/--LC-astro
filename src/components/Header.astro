---
const links = [
  { label: "Home", href: "/" },
  { label: "About", href: "/#about-section" },
  { label: "Websites", href: "/#websites-section" },
  { label: "Packages", href: "/#packages-section" },
  { label: "Contact", href: "/#contact-section" },
];
---

<header class="fixed top-0 z-50 border-teal border-b-2 bg-black opacity-80 text-parchment w-[100%] pt-4">
  <nav class="pl-5 pr-5 pt-1 h-[100%] grid grid-cols-2 pb-3">
    <div class="flex justify-start items-end py-3 pl-1">
      <div id="logo" class="text-4xl font-bold ">
        <a href="/">Laughing Coyote Dev</a>
      </div>
    </div>
    <ul class="flex justify-end items-end text-3xl py-3">
      {links.map((link) => (
        <a class="mx-5"  href={link.href}>
          <li>{link.label}</li>
          </a>
          ))}
        </ul>
      </nav>
    </header>

