---
import MainLayout from "./MainLayout.astro";
const { frontmatter } = Astro.props;
---

<!-- TODO CURRENTLY: FIX MOBILE CSS LAYOUT-->
<MainLayout>
  <div
    id="grid"
    class="bg-test1 grid lg:grid-cols-2 grid-cols-1 dropshadow-3xl"
  >
    <div id="sq1" class="bg-lightSeaGreen border border-black">
      <button class="text-lavender pt-3 pl-1 ml-3 button-1 hover:underline">
        <a href="/#featured-websites">
          {"<---"} back to home
        </a>
      </button>

      <div
        class="text-aquamarine p-5 flex justify-center items-center flex-col h-full"
      >
        <h2 class="font- text-4xl">{frontmatter.title}</h2>
        <p class="text-">{frontmatter.category}</p>
      </div>
    </div>
    <div id="sq2" class="bg-">
      <img
        src={frontmatter.image.url}
        alt=""
        class="border border-black hover:opacity-80"
      />
    </div>
  </div>

  <div
    class="bg-orange border border-onyx absolute right-0 lg:w-3/4 w-full m-5 pr-[150px] p-5 2xl:text-xl md:text-lg sm:text-md"
  >
    <slot />
  </div>
</MainLayout>
