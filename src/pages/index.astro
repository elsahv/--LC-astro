import CTAs from "../components/CTAs.astro";

const items = [
  {
    id: 1,
    title: "WEB DESIGN",
  },
  {
    id: 2,
    title: "WEB DEV",
  },
  {
    id: 3,
    title: "STRATEGIC SEO",
  },
  {
    id: 4,
