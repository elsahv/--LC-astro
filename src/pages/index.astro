---
import Contact from "../components/sections/Contact.astro";
import HeroContent from "../components/shared/HeroContent.astro";
import SectionBanner from "../components/shared/Section_Banner.astro";
import SubSectionBanner from "../components/shared/SubSection_Banner.astro";
import MainLayout from "../layouts/MainLayout.astro";
const allWorks = await Astro.glob("./works/*.md");
---

<MainLayout>
  <!-- ?REMOVE HERO FOR NOW?? -->
  <div id="hero-section" class="mb-5">
    <HeroContent
      title="Laughing Coyote Dev"
      attention="A blog in Progress"
      interest="for small business owners"
      desire="for creatives"
      action="and web developers!"
      heroImg="https://images.pexels.com/photos/39284/macbook-apple-imac-computer-39284.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
    />
  </div>
  <!-- *CURRENT WORKSPACE v-->

  <SectionBanner
    title="Blog"
    paragraph="jflkdsjd jkfdsjf klsdjf sdlkjfklds fjdlkf jd skfljdslkfjslk , klsfksfjlkdsgnsd,k,"
  />
  <!-- <SubSectionBanner title="title" /> -->

  <div
    id="wrapper"
    class="bg- flex justify-center p-[50px] mx-[90px] bg- rounded-lg"
  >
    <div id="grid-container" class="bg-test">
      <div
        id="grid"
        class="grid 2xl:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-12 2xl:mr-5 mr-1 2xl:px-[25px] px-2 py-[50px]"
      >
        {
          allWorks.map((work) => (
            <div
              id="sq"
              class="bg-teal text-test2 rounded-lg border-2 border-black hover:opacity-90"
            >
              <div id="sq-container" class="bg-">
                <h2 class="text-lavender font-bold  p-3 mt-2 ">
                  {work.frontmatter.title}
                </h2>

                <img
                  src={work.frontmatter.image.url}
                  alt=""
                  class="bg-test1 h-[300px] w-full border border-black"
                />
              </div>
              {/* BOTTOM CONTENT */}
              <div class="p-3">
                <p class="mr-1 opacity-90 p-1">
                  {work.frontmatter.description}
                </p>
                <p class="underline opacity-80 hover:opacity-100 text-lavender ml-1">
                  read more...
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <Contact />
  <!-- *CURRENT WORKSPACE ^-->
</MainLayout>
